<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="okgames.taptherightcolor.MainActivity">

    <TextView
        android:text="Tap The Right Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gameTitle"
        android:layout_marginTop="64dp"
        android:textSize="30dp"
        android:fontFamily="monospace"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Button
        android:text="Easy"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/easyButton"
        android:layout_alignBaseline="@+id/mediumButton"
        android:layout_alignBottom="@+id/mediumButton"
        android:layout_alignLeft="@+id/gameTitle"
        android:layout_alignStart="@+id/gameTitle" />

    <Button
        android:text="Medium"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/mediumButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Hard"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/hardButton"
        android:layout_alignBaseline="@+id/mediumButton"
        android:layout_alignBottom="@+id/mediumButton"
        android:layout_alignRight="@+id/gameTitle"
        android:layout_alignEnd="@+id/gameTitle" />

</RelativeLayout>
